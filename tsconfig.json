{
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["DOM", "ES2021"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "include": ["lib/**/*"]
}
